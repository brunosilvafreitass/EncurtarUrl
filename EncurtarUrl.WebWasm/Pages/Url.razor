@page "/"
@inherits EncurtadorPage

<MudText Typo="Typo.h3">Criar EncurtarUrl Encurtada</MudText>
<MudPaper Class="pa-4" Elevation="1">
    <EditForm Model="@ImputModel" OnValidSubmit="EncurtarUrlAsync">
        <DataAnnotationsValidator />
        <MudTextField Label="Url" HelperText="Campo obrigatÃ³ro" @bind-Value="ImputModel.OriginalUrl"
            For="@(() => ImputModel.OriginalUrl)" Required="true" />
        <MudButton ButtonType="ButtonType.Submit" Color="Color.Primary" Variant="Variant.Filled">Salvar</MudButton>
    </EditForm>

    @if (Url.ShortenedUrl != null)
    {
        <MudText Typo="Typo.h6">
            <strong>URL Encurtada:</strong>
            <MudLink Href="@Url.ShortenedUrl" Target="_blank">@Url.ShortenedUrl</MudLink>
        </MudText>
    }

</MudPaper>
